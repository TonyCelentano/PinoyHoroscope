<?xml version="1.0" encoding="UTF-8"?>
	<widget xmlns = "http://www.w3.org/ns/widgets"
	id = "com.pinoyhoroscopes.app"
	version = "1.0.0">
	<name>Pinoy Horoscopes</name>
	<description>Horoscopes in native Filipino, araw-araw!</description>
	<author href="http://pinoyhoroscopes.com" email="tony.s.celentano@gmail.com">Tony Celentano</author>
	<content src="index.html" />
	<preference name="phonegap-version"       value="cli-6.3.0" />
	<preference name="android-build-tool" value="gradle"/>
    <preference name="orientation"                value="default" />
    <preference name="fullscreen"                 value="true" />
	<preference name="android-installLocation"    value="auto" />
	<preference name="DisallowOverscroll" value="true"/>
	<plugin name="cordova-plugin-inappbrowser" spec="~1.5.0" />
	<allow-intent href="http://*/*"/>
	<allow-intent href="https://*/*"/>
	<plugin name="cordova-plugin-whitelist" />
	<plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
	<preference name="Splash.png"               value="splash" />
	<preference name="AutoHideSplashScreen"       value="true" />
	<preference name="SplashScreenDelay"          value="5000" />
	<preference name="SplashMaintainAspectRatio"  value="true" />
	<preference name="FadeSplashScreen"           value="true"/>
	<preference name="ShowSplashScreenSpinner"    value="false" />
	<platform name="android">
    <icon src="Icon.png" />
    <icon src="Icons/Icon36.png"   platform="android"    qualifier="ldpi" />
    <icon src="Icons/Icon48.png"   platform="android"    qualifier="mdpi" />
    <icon src="Icons/Icon72.png"   platform="android"    qualifier="hdpi" />
    <icon src="Icons/Icon96.png"   platform="android"    qualifier="xhdpi" />
    <splash src="Splash.png" />
    <splash src="Icons/Splash240x320.png"       platform="android" qualifier="port-ldpi" />
	<splash src="Icons/Splash320x240.png"       platform="android" qualifier="land-ldpi" />
    <splash src="Icons/Splash320x480.png"       platform="android" qualifier="port-mdpi" />
	<splash src="Icons/Splash480x320.png"       platform="android" qualifier="land-mdpi" />
    <splash src="Icons/Splash480x800.png"       platform="android" qualifier="port-hdpi" />
	<splash src="Icons/Splash800x400.png"       platform="android" qualifier="land-hdpi" />
    <splash src="Icons/Splash720x1280.png"     platform="android" qualifier="port-xhdpi" />
	<splash src="Icons/Splash1280x720.png"     platform="android" qualifier="land-xhdpi" />
	</platform>
</widget>
