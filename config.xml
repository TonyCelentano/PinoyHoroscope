<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
        xml <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id = "com.pinoyhoroscopes.app"
        version = "1.0.0">

    <name>Pinoy Horoscopes</name>

    <description>
        Horoscopes in native Filipino, araw-araw!
    </description>

    <author href="http://pinoyhoroscopes.com" email="tony.s.celentano@gmail.com">
        Tony Celentano
    </author>

    <preference name="permissions"                value="none"/>

    <!-- Customize your app and platform with the preference element. -->
    <preference name="orientation"                value="default" />        <!-- all: default means both landscape and portrait are enabled -->
    <preference name="fullscreen"                 value="true" />           <!-- all: hides the status bar at the top of the screen -->
    <preference name="android-installLocation"    value="auto" />           <!-- android: app install location. 'auto' will choose. 'internalOnly' is device memory. 'preferExternal' is SDCard. -->
    <!-- Define a specific version of PhoneGap to build into your app. -->
    <preference name="phonegap-version"       value="cli-6.3.0" />


    <!-- Plugins -->
        <plugin name="cordova-plugin-inappbrowser" spec="~1.5.0" />
        <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
        <preference name="Splash.png"               value="splash" />
        <preference name="AutoHideSplashScreen"       value="true" />
        <preference name="SplashScreenDelay"          value="5000" />
        <preference name="SplashMaintainAspectRatio"  value="true" />
        <preference name="FadeSplashScreen"           value="true"/>
        <preference name="ShowSplashScreenSpinner"    value="false" />
        <plugin name="cordova-plugin-whitelist" spec="~1.3.0" />
        <allow-navigation href="http://pinoyhoroscopes.com/*" />
        <plugin name="cordova-plugin-device" spec="~1.1.3" />

    <!-- Define app icon for each platform. -->
    <icon src="Icon.png" />
    <icon src="Icons/Icon36.png"   platform="android"    qualifier="ldpi" />
    <icon src="Icons/Icon48.png"   platform="android"    qualifier="mdpi" />
    <icon src="Icons/Icon72.png"   platform="android"    qualifier="hdpi" />
    <icon src="Icons/Icon96.png"   platform="android"    qualifier="xhdpi" />

    <!-- Define app splash screen for each platform. -->
    <splash src="Splash.png" />
    <splash src="Icons/Splash240x320.png"       platform="android" qualifier="port-ldpi" />
    <splash src="Icons/Splash320x480.png"       platform="android" qualifier="port-mdpi" />
    <splash src="Icons/Splash480x800.png"       platform="android" qualifier="port-hdpi" />
    <splash src="Icons/Splash720x1280.png"     platform="android" qualifier="port-xhdpi" />

</widget>
